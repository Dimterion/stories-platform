{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "jsx": "react-jsx",

    "strict": true,
    "noEmit": true,

    "allowJs": true,
    "checkJs": false,

    "skipLibCheck": true,
    "isolatedModules": true
  },
  "include": ["src"]
}
